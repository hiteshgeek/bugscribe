# Example .env for buggy-man
# Copy to .env and fill with real credentials before use.

# MySQL / MariaDB settings
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=buggy_man_db
DB_USER=buggy_user
DB_PASS=replace_with_strong_password

# Optional: upload directory relative to project root
UPLOAD_DIR=uploads

# Optional: max upload size (bytes). Ensure php.ini allows this (upload_max_filesize, post_max_size)
MAX_UPLOAD_BYTES=104857600  # 100MB

# Optional: allow only certain mime types as comma-separated list
ALLOWED_UPLOAD_TYPES=image/png,image/jpeg,video/webm
